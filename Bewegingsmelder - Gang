return {
	on = {
		devices = { 299 } --Activatie bij trigger bewegingsmelder gang
	},
	logging = {
        marker = "Bewegingsmelder gang"
    },
	execute = function(domoticz, bewegingsmelder)
	
		--Bepaal een aantal local variables
		local lichtVoordeur				= domoticz.devices(lightGangVoordeur)
		local lichtTrap					= domoticz.devices(lightGangTrap)
		local lichtStrip				= domoticz.devices(lightLedKeuken)
		
		local luxWaarde					= domoticz.devices(luxGang).lux
		local dimLevel					= 5
		local goodNight					= domoticz.devices(307).state
		
		--Bepaal of het dag is of nacht (slapen)
		if(domoticz.time.isDayTime) then
			dimLevel = 40
		elseif(domoticz.time.isNightTime and goodNight == "Off") then
			dimLevel = 20
		end
		
	    	--Bewegingsmelder is actief, lux waarde is onder de 120
	    	if(bewegingsmelder.active and luxWaarde < 121) then
	    	
				--Als 'Goodnight' uit staat dan zijn we wakker en kunnen beide lampen aan worden gezet
	    		if(goodNight == "Off") then
		    		lichtVoordeur.dimTo(dimLevel)
		    		lichtTrap.dimTo(dimLevel)
		    		
		    	--Anders zijn we wel naar bed en willen we niet beide lampen aan hebben staan.
		    	else 
			    	lichtVoordeur.dimTo(dimLevel)
			    	
			    	--Als LED strip uit staat zet deze dan aan voor 3 minuten.
			    	if(lichtStrip.state == "Off") then
			    		lichtStrip.dimTo(dimLevel).forMin(3)
			    	end
			    	
			    end
		    
		    else 
			    
			    --Schakel alles weer uit.
			    lichtVoordeur.switchOff()
			    lichtTrap.switchOff()	
	    	
	    	end
	
	end
}
